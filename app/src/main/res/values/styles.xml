<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="materialCardViewStyle">@style/AppCardView</item>
        <item name="popupMenuStyle">@style/AppPopupMenu</item>
        <item name="materialAlertDialogTheme">@style/AppAlertDialogTheme</item>
        <item name="chipGroupStyle">@style/AppChipGroupStyle</item>
        <item name="chipStyle">@style/AppChipFilterStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/AppExtendedFABStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="hintTextColor">@color/secondaryColor</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="AppTextField.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="hintTextColor">@color/secondaryColor</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/primaryDarkColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppChipGroupStyle" parent="Widget.MaterialComponents.ChipGroup">
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="AppChipFilterStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="fontFamily">@font/roboto_mono</item>
<!--        <item name="chipStrokeColor">@color/primaryDarkColor</item>-->
<!--        <item name="chipStrokeWidth">2dp</item>-->
        <item name="chipBackgroundColor">@color/chip_color_selector</item>
<!--        <item name="chipSurfaceColor">@color/secondaryTextColor</item>-->
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="chipIconTint">@color/secondaryTextColor</item>
        <item name="checkedIcon">@drawable/ic_check_white_24dp</item>

    </style>

    <style name="AppChipChoiceStyle" parent="Widget.MaterialComponents.Chip.Choice"></style>
    <style name="AppChipActionStyle" parent="Widget.MaterialComponents.Chip.Action"></style>
    <style name="AppChipEntryStyle" parent="Widget.MaterialComponents.Chip.Entry"></style>

    <style name="AppPopupMenu" parent="Widget.MaterialComponents.PopupMenu"></style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
    </style>

    <style name="AppExtendedFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="iconTint">@color/secondaryTextColor</item>
    </style>

    <style name="AppAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>


