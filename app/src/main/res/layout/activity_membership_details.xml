<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/pay_membership_ex_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Pay Membership"
        android:text="Pay Membership"
        app:icon="@drawable/ic_payment_black_24dp"
        android:layout_gravity="bottom|right|end"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MembershipDetailsActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/membership_details_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/membership_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/membership_details_app_bar_layout"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/filter_textView"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/date_chip"
                            style="@style/AppChipFilterStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By Date"
                            android:textAppearance="@style/chipTextAppearance" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/wing_chip"
                            style="@style/AppChipFilterStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By Wing"
                            android:textAppearance="@style/chipTextAppearance" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/fin_year_chip"
                            style="@style/AppChipFilterStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By Financial Year"
                            android:textAppearance="@style/chipTextAppearance" />

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/filter_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Filter"
                    android:paddingTop="4dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/membership_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:minHeight="200dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/amenity_details_time_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:text="B-101"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/membership_details_validity_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/ic_access_time_black_24dp"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/secondaryColor"
                            android:text="Validity"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/amenity_membership_paid_text_view" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/amenity_membership_paid_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@drawable/ic_payment_black_24dp"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/secondaryColor"
                            android:text="Paid on:"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/membership_details_amount_text_view" />

                        <TextView
                            android:id="@+id/membership_details_amount_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:drawableStart="@drawable/ic_rupee_indian"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/secondaryColor"
                            android:text="Amount:"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/amenity_details_time_text_view" />

                        <TextView
                            android:id="@+id/membership_details_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:text="Jonybhau Batliwala Sr."
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/amenity_details_time_text_view"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Rs. 5000"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/membership_details_amount_text_view"
                            app:layout_constraintStart_toEndOf="@+id/membership_details_amount_text_view"
                            app:layout_constraintTop_toTopOf="@+id/membership_details_amount_text_view"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/membership_details_paid_date_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Feb 31, 2019"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/amenity_membership_paid_text_view"
                            app:layout_constraintStart_toEndOf="@+id/amenity_membership_paid_text_view"
                            app:layout_constraintTop_toTopOf="@+id/amenity_membership_paid_text_view" />

                        <TextView
                            android:id="@+id/membership_details_validity_from_date_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="Jan 1, 2019"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/membership_details_validity_from_text_view"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/membership_details_validity_from_text_view"
                            app:layout_constraintTop_toTopOf="@+id/membership_details_validity_from_text_view"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/membership_details_validity_from_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="From:"
                            app:layout_constraintBottom_toBottomOf="@+id/membership_details_validity_text_view"
                            app:layout_constraintStart_toEndOf="@+id/membership_details_validity_text_view"
                            app:layout_constraintTop_toTopOf="@+id/membership_details_validity_text_view"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/membership_details_validity_thru_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:text="Thru:"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/membership_details_validity_from_text_view"
                            app:layout_constraintStart_toStartOf="@+id/membership_details_validity_from_text_view"
                            app:layout_constraintTop_toBottomOf="@+id/membership_details_validity_from_text_view"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/membership_details_validity_thru_date_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="Dec 31, 2020"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/membership_details_validity_thru_text_view"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/membership_details_validity_thru_text_view"
                            app:layout_constraintTop_toTopOf="@+id/membership_details_validity_thru_text_view" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>