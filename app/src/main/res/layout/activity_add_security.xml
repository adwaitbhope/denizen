<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSecurityActivity">

    <ImageView
        android:id="@+id/add_security_personnel_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/professional_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_security_personnel_name_textinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_security_personnel_imageview">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_security_personnel_name_textinput_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_security_personnel_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/add_security_personnel_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@android:string/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageButton
        android:id="@+id/add_security_personnel_edit_image_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_security_personnel_imageview"
        app:layout_constraintStart_toEndOf="@+id/add_security_personnel_imageview"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_security_personnel_phone_number_textinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/add_security_personnel_name_textinput"
        app:layout_constraintStart_toStartOf="@+id/add_security_personnel_name_textinput"
        app:layout_constraintTop_toBottomOf="@+id/add_security_personnel_name_textinput">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_security_personnel_phone_textinput_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Shift TImings:"
        app:layout_constraintStart_toStartOf="@+id/add_security_personnel_phone_number_textinput"
        app:layout_constraintTop_toBottomOf="@+id/add_security_personnel_phone_number_textinput" />

    <Button
        android:id="@+id/add_security_personnel_shift_from_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="From"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/add_security_personnel_shift_till_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:text="Till"
        app:layout_constraintBottom_toBottomOf="@+id/add_security_personnel_shift_from_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_security_personnel_shift_from_button" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/add_security_personnel_shift_from_button"
        app:layout_constraintStart_toStartOf="@+id/add_security_personnel_shift_from_button"
        app:layout_constraintTop_toBottomOf="@+id/add_security_personnel_shift_from_button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/add_security_personnel_shift_till_button"
        app:layout_constraintStart_toStartOf="@+id/add_security_personnel_shift_till_button"
        app:layout_constraintTop_toBottomOf="@+id/add_security_personnel_shift_till_button" />


</androidx.constraintlayout.widget.ConstraintLayout>