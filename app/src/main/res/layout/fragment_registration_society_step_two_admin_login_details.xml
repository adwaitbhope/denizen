<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationSocietyStepTwoAdminLoginDetailsFragment">

    <NumberPicker
        android:id="@+id/AdminNumberPicker"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintBottom_toBottomOf="@+id/NumberOfAdmins"
        app:layout_constraintTop_toTopOf="@+id/NumberOfAdmins"
        tools:layout_editor_absoluteX="284dp" />


    <TextView
        android:id="@+id/NumberOfAdmins"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="64dp"
        android:gravity="center_vertical"
        android:text="@string/number_of_admins"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/AdminNumberPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SecurityDesks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:gravity="center_vertical"
        android:text="@string/no_of_security_desks"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumberOfAdmins" />
</androidx.constraintlayout.widget.ConstraintLayout>
